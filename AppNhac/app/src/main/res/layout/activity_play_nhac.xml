<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PlayNhacActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_weight="8"
        android:id="@+id/viewpagerplaylist"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvnamebhmusic"
            android:textColor="#000"
            android:text="Du Mua Thoi Roi"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvnamecsmusic"
            android:textColor="#000"
            android:text="Thuy Chi"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbarSize="55dp" />
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:textColor="#000"
            android:text="00:00"
            android:id="@+id/tvtimestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvtimeend"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="00:00"
            android:textColor="#000"
            android:layout_marginLeft="270dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/iconsuffle"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/imgbottomsuffle"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:src="@drawable/iconsuffle"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/imgbottomback"
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:src="@drawable/iconplay"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/imgbottomplay"
            android:layout_marginRight="15dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageButton
            android:src="@drawable/iconnext"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/imgbottomnext"
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:src="@drawable/iconpreview"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/imgbottomrepeat"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>