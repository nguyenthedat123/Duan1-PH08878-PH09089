<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_ChuDe_TheLoai">

    <RelativeLayout
        android:padding="7dp"
        android:id="@+id/rltivecdtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="CHỦ ĐỀ VÀ THỂ LOẠI"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textColor="#913677"
            android:id="@+id/tvxemthem"
            android:text="Xem Thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
<HorizontalScrollView
    android:scrollbars="none"
    android:layout_below="@id/rltivecdtl"
    android:id="@+id/scrollviewhori"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</HorizontalScrollView>
</RelativeLayout>